{% extends 'base.html.twig' %}
{% block title %}History!{% endblock %}
{% block body %}
    <style>
        .container {
            margin: 1em auto;
            font: 18px/1.5 sans-serif;
            display: flex;
            width: 70vw;
            justify-content: space-evenly;
            align-items: center;
        }
    </style>
    <div class="container">
        <div class="row">
            <form>
                <table id="domainTable" class="table table-striped table-bordered border-primary table-hover">
                    <thead class="table-dark col-md-15">

                    <th class="col-4">History Id</th>
                    <th class="col-4">Domain Naam</th>
                    <th class="col-4">Status</th>
                    <th class="col-4">Check Date</th>
                    <th class="col-4">WhoIsLink</th>

                    </thead>
                    {% for domain in resultsHistory %}
                        <tr class="col-md-15">
                            <td class="col-4">{{ domain.id }}</td>
                            <td class="col-4">{{ domain.domainName }}</td>
                            <td class="col-4">{{ domain.result }}</td>
                            <td class="col-4">{{ domain.checkDate }}</td>
                            <td class="col-4">
                                <a class="btn btn-success btn-sm"
                                        onclick="window.location='/who/is?domainName={{ domain.domainName }}';">{{ domain.domainName }}</a>
                            </td>

                        </tr>
                    {% endfor %}
                </table>
            </form>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#domainTable').DataTable(
                {
                    "aLengthMenu": [[20, 50, 100, -1], [20, 50, 100, "All"]],
                    "iDisplayLength": 20
                }
            );
        });
    </script>
{% endblock %}

