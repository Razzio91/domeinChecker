{% extends 'base.html.twig' %}

{% block title %}Hello DomeinCheckerController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>


    <div class="example-wrapper">
        <ul>

            <ul>
                {% block main %}
                    {{ form(form) }}
                {% endblock %}
            </ul>
            {% for domain in results %}
            {% if domain.status == "inyouraccount" or domain.status =="internalpush" or domain.status =="internalpull" %}
                <ul> {{ domain.domainName }}: {{ "not free" }} </ul>
                {% else %}
                    <ul>{{ domain.domainName }} : {{ domain.status }} </ul>
                {% endif %}
                {% endfor %}
            </ul>

    </div>

{% endblock %}


